@model IEnumerable<AwqafTest.Models.ViewModels.AccountViewModel>

@{
    ViewData["Title"] = "Accounts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Add New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                Levels 1-4
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemDate)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level1) -
                @Html.DisplayFor(modelItem => item.Level2) -
                @Html.DisplayFor(modelItem => item.Level3) -
                @Html.DisplayFor(modelItem => item.Level4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemDate)
            </td>
        </tr>
}
    </tbody>
</table>
