@model IEnumerable<AwqafTest.Models.ViewModels.FiscalYearViewModel>

@{
    ViewData["Title"] = "Fiscal Years";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FiscalYearId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCurrent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsOpen)
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FiscalYearId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @if (item.IsCurrent)
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
        </td>
        <td>
            @if (item.IsOpen)
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
        </td>
    </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus-circle"></i> Add New Fiscal Year</a>
</p>
